<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Release Module</xar:mlstring></span></div>
<!-- common admin menu for this module - remove link to the current function -->
<div class="xar-mod-body">
<h2>#$type# -- #$name#</h2>
<form action="#xarModURL('release', 'user', 'display')#" method="post" enctype="application/x-www-form-urlencoded">
	<input type="hidden" name="rid" id="rid" value="#$rid#" />
	<input type="radio" name="phase" id="phase" value="view"  />
	<xar:mlstring>Basic Information</xar:mlstring>
	<input type="radio" name="phase" id="phase" value="version"  />
	<xar:mlstring>Version History</xar:mlstring>
<xar:if condition="$type eq 'Module'">
	<input type="radio" name="phase" id="phase" value="docsmodule"  />
	<xar:mlstring>General Use</xar:mlstring>
	<input type="radio" name="phase" id="phase" value="docsblocks"  />
	<xar:mlstring>Blocks Documentation</xar:mlstring>
	<input type="radio" name="phase" id="phase" value="docshooks"  />
	<xar:mlstring>Hooks Documentation</xar:mlstring>
<xar:else />
	<input type="radio" name="phase" id="phase" value="docstheme"  />
	<xar:mlstring>General Use</xar:mlstring>
	<input type="radio" name="phase" id="phase" value="docsblockgroups"  />
	<xar:mlstring>Defined Block Groups</xar:mlstring>
</xar:if>
&nbsp;&nbsp;<input type="submit" value="Refresh"  tabindex="6" />
</form>

<xar:if condition="$version eq 2">
	<xar:if condition="!empty($message)">
		#$message#<br /><br />
	<xar:else />
		<xar:loop name="$items">
<div class="xar-alt" style="margin: 0px 3px 6px 3px;padding: 1px;text-align: left;">
<div class="xar-norm" style="padding: 3px;">
		<h1><a href="#$displaylink#">#$name#</a></h1>
<div class="xar-accent" style="padding: 2px;"><span class="xar-sub">
<xar:mlstring>Author</xar:mlstring>: 
<a href="#$contacturl#">#$realname#</a>
<xar:mlstring>on</xar:mlstring>
#$time#
</span></div>
<h3>Description of #$type#:</h3>&nbsp;&nbsp; #$desc#<br /><br />
<h3>Version:</h3>&nbsp;&nbsp; #$version#<br />
		<xar:if condition="!empty($demolink)">
		<h3>Demo Link:</h3>&nbsp;&nbsp; <a href="#$demolink#">#$demolink#</a><br />
		</xar:if>
		<h3>Download Link:</h3>&nbsp;&nbsp; <a href="#$dllink#">#$dllink#</a><br />
		<xar:if condition="$price eq 2">
		<h3>Price:</h3>&nbsp;&nbsp; #$priceterms#<br />
		</xar:if>
		<h3>Certified:</h3>&nbsp;&nbsp; #$certifiedstatus#<br />
		<h3>Changelog:</h3>&nbsp;&nbsp; #$changelog#<br /><br />
		<h3>Additional Notes:</h3>&nbsp;&nbsp; #$notes#<br /><br />
		<h3>Editor Notes:</h3>&nbsp;&nbsp;<i> #$enotes# </i><br />
		</div>
	</div>
		</xar:loop>
	</xar:if>

<xar:elseif condition="$docs eq 2" />
	<xar:if condition="!empty($message)">
		#$message#<br /><br />
	<xar:else />
		<xar:loop name="$items">
			<h3><a href="#$docurl#">#$title#</a></h3>
				<p>#$docsf#</p>
		</xar:loop>
	</xar:if>

<xar:elseif condition="$general eq 2" />

	<h3>#$type# Name:</h3> &nbsp;&nbsp; #$name# <br />
	<h3>#$type# Author:</h3>&nbsp;&nbsp; <a href="#$contacturl#">#$realname#</a><br />
	<h3>#$type# Description:</h3> &nbsp;&nbsp; #$desc#
	<br /><br />
	#$hooks#
</xar:if>
