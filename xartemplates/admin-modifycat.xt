<?xml version="1.0"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <div class="xar-mod-head">
        <span class="xar-mod-title">
            crispBB Administration
        </span>
    </div>
    <div class="xar-mod-body">
        <xar:template type="module" module="crispbb" file="admin-menu" />
        <h2>
            Modify Forum Category
        </h2>
        <form action="#xarModURL('crispbb','admin','modifycat')#" method="post" enctype="application/x-www-form-urlencoded">
            <fieldset class="xar-norm">
                <legend>
                    Category
                </legend>
                <xar:data-form object="$object" />
            </fieldset>
            <fieldset>
                <div class="xar-form-input-wrapper">
                    <div class="xar-form-container-after">
                        <input type="hidden" name="authid" id="authid" value="#xarSecGenAuthKey()#" />
                        <input type="hidden" name="itemid" id="itemid" value="#$itemid#" />
                        <input type="hidden" name="return_url" id="return_url" value="#$return_url#" />
                        <input type="hidden" name="phase" id="phase" value="update" />
                        <input type="submit" value="#xarML('Update')#" />
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</xar:template>