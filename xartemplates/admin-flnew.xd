<xar:style scope="module" file="'.$stylesheet.'" module="netquery" />

<div class="xar-mod-head">
  <span class="xar-mod-title"><xar:mlstring>Netquery Administration</xar:mlstring></span>
</div>

<div class="xar-mod-body">
  <form action="#xarModURL('netquery', 'admin', 'flnew')#" method="post" enctype="application/x-www-form-urlencoded" >
    <table class="nqinput">
      <tr>
        <th colspan="4">
          <xar:mlstring>Adding a New Service/Exploit Flag</xar:mlstring>
          <input type="hidden" name="authid" value="#$authid#" />
          <input type="hidden" name="phase" id="phase" value="update" />
        </th>
      </tr>
      <tr>
        <td>
          <span class="help" title="#xarML('The flag number')#"><label for="flag_flagnum"><xar:mlstring>Flag #</xar:mlstring></label></span>
        </td>
        <td>
          <span class="help" title="#xarML('The flag keyword text')#"><label for="flag_keyword"><xar:mlstring>Keyword</xar:mlstring></label></span>
        </td>
        <td>
          <span class="help" title="#xarML('The flag keyword font color')#"><label for="flag_fontclr"><xar:mlstring>Font</xar:mlstring></label></span>
        </td>
        <td>
          <span class="help" title="#xarML('Lookup search URL for flagged items')#"><label for="flag_lookup_1"><xar:mlstring>Lookup Search URL</xar:mlstring></label></span>
        </td>
      </tr>
      <tr>
        <td>
          <input type="text" name="flag_flagnum" id="flag_flagnum" value="" size="2" maxlength="5" />
        </td>
        <td>
          <input type="text" name="flag_keyword" id="flag_keyword" value="" size="10" maxlength="20" />
        </td>
        <td>
          <select name="flag_fontclr" id="flag_fontclr" tabindex="0">
            <xar:foreach in="$colors" value="$color">
              <xar:if condition="!empty($color)">
                <xar:if condition="$color eq 'black'">
                  <option selected="selected" class="nq-#$color#" value="#$color#">#$color#</option>
                <xar:else />
                  <option class="nq-#$color#" value="#$color#">#$color#</option>
                </xar:if>
              </xar:if>
            </xar:foreach>
          </select>
        </td>
        <td>
          <input type="text" name="flag_lookup_1" id="flag_lookup_1" value="" size="30" maxlength="100" />
        </td>
      </tr>
      <tr>
        <td colspan="4">
          <input type="submit" name="Submit" id="Submit" value="#$submitlabel#" />
          <input type="submit" name="Cancel" id="Cancel" value="#$cancellabel#" />
        </td>
      </tr>
    </table>
  </form>
</div>
  