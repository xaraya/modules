<xar:if condition="empty($layout) or $layout eq 'default'">
    <tr align="left" valign="middle">
        <td colspan="2" class="xar-accent">
            <xar:mlstring>
                Template : modules/accessmethods/xartemplates/objects/showform.xd<br/>
                This is a generic form template for objects in the accessmethods module (if you want that)
            </xar:mlstring>
        </td>
    </tr>
    <xar:foreach in="$properties" key="$name" value="$property">
        <tr align="left" valign="middle">
            <td><xar:data-label property="$properties[$name]" label="id" /> </td>
            <td><xar:data-input property="$properties[$name]" /> </td>
        </tr>
    </xar:foreach>
<xar:else />
    <xar:mlstring>Specify your own layout here...</xar:mlstring>
    <br /><br />
    <xar:mlstring>You can also specify a separate template, e.g. if you want to handle individual fields differently for a particular module / itemtype</xar:mlstring>
</xar:if>

