<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
<!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->

<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Polls Administration</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <h2>
        <xar:mlstring>New Option for poll</xar:mlstring>
            #$polltitle#
    </h2>
    <form action="&xar-modurl-polls-admin-createopt;" method="post" enctype="application/x-www-form-urlencoded">
        <fieldset>
            <legend>
                <xar:mlstring>Add new option to poll</xar:mlstring>
            </legend>
            <input type="hidden" name="authid" value="#$authid#"/>
            <input type="hidden" name="pid" value="#$pid#"/>
            <div class="xar-form-input-wrapper">
                <label for="option" title="#xarML('The name of the new option')#" class="xar-form-label">
                    <xar:mlstring>Option Text</xar:mlstring>
                </label>
                <xar:data-input type="textbox" name="option" id="option" size="50" maxlength="100" value=""/>
            </div>
        </fieldset>
        <fieldset>
            <div class="xar-form-input-wrapper-after">
                <input type="submit" value="#xarML('Create Option')#"/> &#160; &#160;
                <input type="button" value="#xarML('Cancel')#" onclick="location.href='#$cancelurl#'"/>
            </div>
        </fieldset>
    </form>
</div>
</xar:template>