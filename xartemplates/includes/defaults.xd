<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <xar:if condition="$tabmodule ne 'xarayatesting'">
        <xar:set name="regid">xarModGetIDFromName($tabmodule)</xar:set>
    <xar:else />
        <xar:set name="regid">0</xar:set>
    </xar:if>
    <div class="xar-form-input-wrapper">
        <label for="bar" title="#xarML('An example of a module-specific configuration variable')#" class="xar-form-label">
            <xar:mlstring>
                Bar:
            </xar:mlstring>
        </label>
        <xar:set name="value">xarModItemVars::get('xarayatesting', 'bar', $regid)</xar:set>
        <input type="text" name="bar" id="bar" value="#$value#" />
    </div>
</xar:template>