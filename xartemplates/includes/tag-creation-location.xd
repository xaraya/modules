<p>
    <span style="width: 100px;">
        <xar:mlstring><strong>Choose type:</strong></xar:mlstring>
    </span>
    <span style="width: 250px;">
        <xar:if condition="$matrix ne TRUE">
            <span style="width: 75px; display: block; float: left;">
                <xar:if condition="isset($tagtype) AND $tagtype eq 'simple'">
                    <label for="tagtypeSimple"><span style="color: blue;">Simple</span></label><br />
                    <input id="tagtypeSimple"
                            type="radio"
                            name="tagtype"
                            value="simple"
                            checked="checked"
                            onchange="javascript:this.form.submit()"/>
                <xar:else />
                    <label for="tagtypeSimple">Simple</label><br />
                    <input id="tagtypeSimple"
                            type="radio"
                            name="tagtype"
                            value="simple"
                            onchange="javascript:this.form.submit()"/>
                </xar:if>
            </span>
        <xar:else />
            <span style="width: 75px; display: block; float: left;">
                <xar:if condition="isset($tagtype) AND $tagtype eq 'simple'">
                    <label for="tagtypeSimple"><span style="color: blue;">Simple</span></label><br />
                    <input id="tagtypeSimple"
                            type="radio"
                            name="tagtype"
                            value="simple"
                            checked="checked"
                            onchange="javascript:this.form.submit()"/>
                <xar:else />
                    <label for="tagtypeSimple">Simple</label><br />
                    <input id="tagtypeSimple"
                            type="radio"
                            name="tagtype"
                            value="simple"
                            onchange="javascript:this.form.submit()"/>
                </xar:if>
            </span>
            <span style="width: 75px; display: block; float: left;">
                <xar:if condition="isset($tagtype) AND $tagtype eq 'crumbtrail'">
                    <label for="tagtypeCrumbtrail"><span style="color: blue;">Crumbtrail</span></label><br />
                    <input id="tagtypeCrumbtrail"
                            type="radio"
                            name="tagtype"
                            value="crumbtrail"
                            checked="checked"
                            onchange="javascript:this.form.submit()"/>
                <xar:else />
                    <label for="tagtypeCrumbtrail">Crumbtrail</label><br />
                    <input id="tagtypeCrumbtrail"
                            type="radio"
                            name="tagtype"
                            value="crumbtrail"
                            onchange="javascript:this.form.submit()"/>
                </xar:if>
            </span>
        </xar:if>
    </span>
</p>
