<?xml version="1.0" encoding="utf-8"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
  <!-- this relies on $workflow, $subjectId, $place, $transition and $trackerId if available -->
  <xar:if condition="empty($config)">
    <xar:set name="dummy">sys::import('modules.workflow.class.config')</xar:set>
    <xar:set name="config">xarWorkflowConfig::loadConfig()</xar:set>
  </xar:if>
  <xar:if condition="!empty($workflow) and !empty($config[$workflow]) and empty($trackerId) and empty($subjectId)">
  <fieldset>
    <legend>
      Transitions
    </legend>
    <xar:set name="guarded">'(?)'</xar:set>
    <xar:set name="updated">'[+]'</xar:set>
    <xar:set name="deleted">'|x|'</xar:set>
    <!-- show transition - from place - to place - change status in rows -->
    <table style="border-collapse: separate; width: 50%">
      <tr>
        <th>Transition</th>
        <th>From Place</th>
        <th>To Place</th>
        <th>Guarded</th>
        <th>Update Property</th>
        <th>Stop Tracker</th>
      </tr>
      <xar:foreach in="$config[$workflow]['transitions']" key="$name" value="$info">
        <!-- @checkme state machine only supports 1 to, use 2 for status change -->
        <xar:set name="to">is_array($info['to']) ? $info['to'][0] : $info['to']</xar:set>
        <tr>
          <xar:if condition="!empty($transition) and $transition eq $name">
            <td><strong>#xarWorkflowConfig::formatName($name)#</strong></td>
          <xar:else/>
            <td>#xarWorkflowConfig::formatName($name)#</td>
          </xar:if>
          <xar:if condition="is_array($info['from'])">
            <td>
            <xar:foreach in="$info['from']" value="$from">
              <xar:if condition="!empty($place) and $place eq $from">
               <strong>#xarWorkflowConfig::formatName($from)#</strong><br/>
              <xar:else/>
                #xarWorkflowConfig::formatName($from)#<br/>
              </xar:if>
            </xar:foreach>
            </td>
          <xar:elseif condition="!empty($place) and $place eq $info['from']"/>
            <td><strong>#xarWorkflowConfig::formatName($info['from'])#</strong></td>
          <xar:else/>
            <td>#xarWorkflowConfig::formatName($info['from'])#</td>
          </xar:if>
          <xar:if condition="!empty($place) and $place eq $to">
            <td><strong>#xarWorkflowConfig::formatName($to)#</strong></td>
          <xar:else/>
            <td>#xarWorkflowConfig::formatName($to)#</td>
          </xar:if>
          <xar:if condition="!empty($info['admin']) or !empty($info['roles']) or !empty($info['access']) or !empty($info['guard'])">
            <td>#$guarded#</td>
          <xar:else/>
            <td>&#160;</td>
          </xar:if>
        <!-- @checkme state machine only supports 1 to, use 2 for status change -->
          <xar:if condition="is_array($info['to']) and count($info['to']) gt 1">
            <xar:if condition="!empty($place) and $place eq $info['to'][1]">
              <td>#$updated#&#160;<strong>#xarWorkflowConfig::formatName($info['to'][1])#</strong></td>
            <xar:else/>
              <td>#$updated#&#160;#xarWorkflowConfig::formatName($info['to'][1])#</td>
            </xar:if>
          <xar:else/>
            <td></td>
          </xar:if>
          <xar:if condition="!empty($info['delete'])">
            <td>#$deleted#</td>
          <xar:else/>
            <td>&#160;</td>
          </xar:if>
        </tr>
      </xar:foreach>
    </table>
    <!-- show from place - transition 1 - transition 2 - ... with to place in cells -->
