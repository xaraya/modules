<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
<xar:style scope="module" module="base" file="navtabs" />
<br />
<dl class="xar-tabs">
    <dt class="help">
        <xar:mlstring>
            Applies to:
        </xar:mlstring>
    </dt>
    <xar:if condition="$tab eq 'karma_general'">
        <xar:set name="class">"active"</xar:set>
    <xar:else/>
        <xar:set name="class">""</xar:set>
    </xar:if>
    <dd class="#$class#">
        <a href="#xarModURL('karma', 'admin', 'modifyconfig', array('tabmodule' => 'karma', 'tab' => 'karma_general'))#">
        <xar:mlstring>General</xar:mlstring></a>
    </dd>
    <xar:set name="tabs">$hooks['tabs']</xar:set>
    <xar:foreach in="$tabs" value="$thistab">
        <xar:set name="configtab">$thistab['module'] . "_" . $thistab['configarea']</xar:set>
        <xar:if condition="$tab eq $configtab">
            <xar:set name="class">"active"</xar:set>
        <xar:else/>
            <xar:set name="class">""</xar:set>
        </xar:if>
        <dd class="#$class#">
            <a href="#xarModURL('karma', 'admin', 'modifyconfig', array('tabmodule' => $thistab['module'],'tab' => $configtab))#">
                #$thistab['configtitle']#
            </a>
        </dd>
    </xar:foreach>
</dl>
</xar:template>