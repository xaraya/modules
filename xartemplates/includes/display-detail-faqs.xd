<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <xar:template file="publinks" type="module" />
    <!--
    <xar:data-output type="categorynavigation" layout="trails" showchildren="1" module="publications" itemtype="$ptid" itemid="$id" cids="$cids" showcatcount="$showcatcount" showempty="0" />
    -->

    <xar:set name="canedit">
        xarModAPIFunc('publications','user','checksecurity',array('mask' => 'EditPublications', 'publication' => $object->getFieldValues()))
    </xar:set>

    <xar:if condition="$canedit">
        <xar:set name="candelete">
            xarModAPIFunc('publications','user','checksecurity',array('mask' => 'ManagePublications', 'publication' => $object->getFieldValues()))
        </xar:set>
    <xar:else />
        <xar:set name="candelete">0</xar:set>
    </xar:if>
    
    <xar:set name="publication_state">
        $properties['state']->value
    </xar:set>

    <xar:if condition="!$canedit AND ($publication_state lt 3)">
        You have no permission to view this item
    <xar:else />
        <table width="100%" border="0" cellspacing="0" cellpadding="0" align="center">
            <tr>
                <td align="left" valign="top" class="xar-normal">
                    <span class="xar-title">
                        <xar:data-output property="$properties['question']" />
                        <xar:if condition="$canedit">
                            &#160;
                            [<a href="#xarModURL('publications', 'user', 'modify',array('itemid' => $properties['id']->value, 'name' => $object->name))#">Edit</a>]
                        </xar:if>
                        <xar:if condition="$candelete">
                            &#160;
                            [<a href="#xarModURL('publications', 'user', 'delete',array('itemid' => $properties['id']->value, 'name' => $object->name))#">Delete</a>]
                        </xar:if>
                    </span>
                    <br />
                    <!--
                    <div align="right">
                        <span class="xar-sub"> #$topic_icons# </span>
                    </div>
                    -->
                    <br />
                    <xar:if condition="!empty($properties['detail']->value)">
                        <em>
                            <xar:data-output property="$properties['detail']" />
                        </em>
                        <br />
                    </xar:if>
                    <xar:if condition="!empty($submitted_by)">
                        <span class="xar-quote">

                                Submitted by

                            <xar:data-output property="$properties['submitted_by']" />
                        </span>
                        <br />
                    </xar:if>
                    <br />
                    <xar:data-output property="$properties['answer']" />
                    <br />
                    <xar:if condition="!empty($previous) and !empty($next)">
                        <div class="xar-normal xar-align-right xar-padding-thick">
                            <span> #$previous# </span> <span> #$next# </span>
                        </div>
                    </xar:if>
                </td>
            </tr>
        </table>
        <xar:if condition="!empty($prevart) || !empty($nextart)">
            <br />
            <table border="0" width="95%">
                <tr>
                    <td align="left">
                        <xar:if condition="!empty($prevart)">
                            <a href="#$prevart#">&lt;

                                    prev

                            </a>
                        </xar:if>
                        &#160;
                    </td>
                    <td align="right">
                        &#160;
                        <xar:if condition="!empty($nextart)">
                            <a href="#$nextart#">

                                    next

                                &gt;</a>
                        </xar:if>
                    </td>
                </tr>
            </table>
        </xar:if>
    </xar:if>
    <xar:template file="navtabs-user" type="module" />
</xar:template>