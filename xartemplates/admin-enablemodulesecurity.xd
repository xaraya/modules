<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Security Administration</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">

    <xar:template file="admin-menu" />

    <p>
        Please be careful with this feature. It allows you to generate security
        levels for existing items.
    </p>

    <form action="#xarModURL('security', 'admin', 'enablemodulesecurity')#" method="POST">
        <fieldset>
            <legend>Generate Security</legend>

            <div class="xar-form-input-wrapper">
                <label class="xar-form-label">Module :</label>
                <xar:data-input name="mod" type="module" value="$modid" />
            </div>
            <div class="xar-form-input-wrapper">
                <label class="xar-form-label">Table :</label>
                <select name="table" class="xar-form-textlong">
                <xar:foreach in="$tables" key="$index" value="$table_name">
                <option value="#$table_name#"><xar:var name="table_name" /></option>
                </xar:foreach>
                </select>
            </div>
            <div class="xar-form-input-wrapper">
                <label class="xar-form-label">Item Type :</label>
                <input type="text" name="itemtype" class="xar-form-textlong" />
            </div>
            <div class="xar-form-input-wrapper">
                <label class="xar-form-label">User Id Field :</label>
                <input type="text" name="uid" class="xar-form-textlong" />
            </div>
             <div class="xar-form-input-wrapper">
                <label class="xar-form-label">User Group :</label>
                <xar:data-input name="group" type="grouplist" value="$gid"/>
            </div>
        </fieldset>
        <fieldset>
            <legend>Security Levels</legend>

            <div class="xar-form-input-wrapper">
                <label class="xar-form-label">User:</label>
                <input type="text" name="user_level" value="#$user_level#" class="xar-form-textshort" />
            </div>
            <div class="xar-form-input-wrapper">
                <label class="xar-form-label">Group :</label>
                <input type="text" name="group_level" value="#$group_level#" class="xar-form-textshort" />
            </div>
            <div class="xar-form-input-wrapper">
                <label class="xar-form-label">World :</label>
                <input type="text" name="world_level" value="#$world_level#" class="xar-form-textshort" />
            </div>
        </fieldset>
        <fieldset>
            <legend>Actions</legend>

            <div class="xar-form-input-wrapper-after">
                <input type="submit" name="submit" value="Generate Security" />
            </div>
        </fieldset>
    </form>
</div>
