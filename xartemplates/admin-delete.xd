<xar:if condition="xarModGetVar('headlines', 'adminajax')">
  <xar:if condition="!xarModIsAvailable('dojo')">
    <xar:base-include-javascript filename="xmlhttprequest.js" module="base" position="body"/>
  </xar:if>
  <xar:set name="onclick">"return loadContent(this.href,'notsogoodbutok');"</xar:set>
<xar:else/>
  <xar:set name="onclick">"return true;"</xar:set>
</xar:if>
<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Headlines Administration</xar:mlstring></span></div>
<!-- common admin menu for this module - remove link to the current function -->
<div id="notsogoodbutok" class="xar-mod-body">
<xar:template type="module" file="admin-menu" />
<h2><xar:mlstring>Delete Headline</xar:mlstring></h2>
<div align="center">
<form method="post" action="#xarModURL('headlines', 'admin', 'delete')#" enctype="application/x-www-form-urlencoded" >
    <input type="hidden" name="authid" value="#$authid#" />
    <input type="hidden" name="hid" id="hid" value="#$hid#" />
    <input type="hidden" name="confirm" id="confirm" value="1"/>
    <input type="hidden" name="confirmation" id="confirmation" value="1"/>

    <p><xar:mlstring>Confirm deletion of Headline</xar:mlstring></p>

    <input type="submit" value="#$submitlabel#"  tabindex="1" /><br /><br />
    <a href="#xarModURL('headlines', 'admin', 'view')#" onclick="#$onclick#" ><xar:mlstring>Cancel deletion of Headline</xar:mlstring></a>
</form>
</div>
</div>
