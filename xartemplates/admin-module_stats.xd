<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>
            Comments Administration
        </xar:mlstring>
    </span>
</div>
<div class="xar-mod-body">
    <xar:template type="module" file="admin-menu" />
    <h2>
        <xar:mlstring>
            Comments Module Statistics
        </xar:mlstring>
    </h2>


    <h3>
        <xar:mlstring>Module</xar:mlstring> [<b>#$modname#</b>]
    </h3>



    <div align="center">
        <table border="0" width="100%" cellpadding="0" cellspacing="0">
            <tr>
                <th align="center" valign="center" width="50%">
                    <xar:mlstring><b>Item<br />Id</b></xar:mlstring>
                </th>
                <th align="center" valign="center" width="15%">
                    <xar:mlstring><b>Total<br />Comments</b></xar:mlstring>
                </th>
                <th align="center" valign="center" width="15%">
                    <xar:mlstring><b>Inactive<br />Comments</b></xar:mlstring>
                </th>
                <th align="center" valign="center" width="20%">
                    <xar:mlstring><b>Action</b></xar:mlstring>
                </th>
            </tr>

            <tr>
                <td colspan="4">
                    &nbsp;
                </td>
            </tr>

            <xar:if condition="!isset($data) or empty($data) or count($data) eq '0'">
                <tr>
                    <td colspan="4" align="center">
                        <br />
                        <xar:mlstring>
                            There are currently no comments attached to this module...
                        </xar:mlstring>
                        <br />
                        <br />
                    </td>
                </tr>
            <xar:else />
                <tr>
                    <td colspan="4">
                        <div class="xar-alt" ></div>
                    </td>
                </tr>
                <xar:loop name="$data">
                    <tr>
                        <xar:if condition="!empty($loop:item['title']) and !empty($loop:item['link'])">
                        <td valign="center" width="50%">
                            #$loop:item['pageid']# - <a href="#$loop:item['link']#">#$loop:item['title']#</a>
                        </td>
                        <xar:else/>
                        <td align="center" valign="center" width="50%">
                            #$loop:item['pageid']#
                        </td>
                        </xar:if>
                        <td align="center" valign="center" width="15%">
                            #$loop:item['total']#
                        </td>
                        <td align="center" valign="center" width="15%">
                            #$loop:item['inactive']#
                        </td>
                        <td align="center" valign="center" width="20%">
                            <a href="#$loop:item['delete_url']#"><b><xar:mlstring>Delete</xar:mlstring></b></a>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4">
                        <div class="xar-alt" ></div>
                        </td>
                    </tr>
                </xar:loop>
                <tr>
                    <td align="right" valign="center" width="50%">
                        <b><xar:mlstring>Total</xar:mlstring></b>:
                    </td>
                    <td align="center" valign="center" width="15%">
                        <b>#$gt_total#</b>
                    </td>
                    <td align="center" valign="center" width="15%">
                        <b>#$gt_inactive#</b>
                    </td>
                    <td align="center" valign="center" width="20%">
                        <a href="#$delete_all_url#"><xar:mlstring>Delete All</xar:mlstring></a>
                    </td>
                </tr>
            </xar:if>
            <xar:if condition="!empty($pager)">
            <tr>
                <td colspan="4" align="center">
                    #$pager#
                </td>
            </tr>
            </xar:if>
            <tr>
                <td colspan="4">
                    <div class="xar-accent xar-norm-outline" style="text-align: justify;padding: 0.5em 1em 0.5em 1em; margin-top: 5px;">
                        <xar:mlstring>
                            By clicking on <b>Delete</b> you can delete all comments associated with a particular
                            module's item.
                        </xar:mlstring>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
