<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
<!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
<div class="xar-mod-head">
  <span class="xar-mod-title">
    <xar:mlstring>Polls Administration</xar:mlstring>
  </span>
</div>
<div class="xar-mod-body">
  <h2>
    <xar:mlstring>Delete Option for poll</xar:mlstring>
    #$polltitle#
  </h2>
  <form action="&xar-modurl-polls-admin-deleteopt;" method="post" enctype="application/x-www-form-urlencoded">
    <fieldset>
      <legend>
        <xar:mlstring>Delete option</xar:mlstring>
      </legend>
      <input type="hidden" name="authid" value="#$authid#"/>
      <input type="hidden" name="pid" value="#$pid#"/>
      <input type="hidden" name="opt" value="#$opt#"/>
      <input type="hidden" name="confirm" value="#$confirm#"/>
      <div class="xar-form-input-wrapper">
        <label for="option" title="#xarML('The name of the option you want to delete')#" class="xar-form-label">
          <xar:mlstring>Option Text</xar:mlstring>
        </label>
        #$option#
      </div>
    </fieldset>
    <div class="xar-form-input-wrapper-after">
      <input type="submit" value="#xarML('Delete Option')#"/> &#160; &#160;
      <input type="button" value="#xarML('Cancel')#" onclick="location.href='#$cancelurl#'"/>
    </div>
  </form>
</div>
</xar:template>