<script type="text/javascript" src="modules/base/xartemplates/functions.js"></script>
<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Headline Administration</xar:mlstring></span></div>
<div class="xar-mod-body">
<xar:template type="module" file="admin-menu" />
    <h2><xar:mlstring>View Headlines</xar:mlstring></h2>
    <form method="post" action="#xarModUrl('headlines', 'admin', 'settings')#">
        <fieldset>
        <legend><xar:mlstring>Display Options</xar:mlstring></legend>
        <div class="xar-form-input-wrapper">
            <xar:comment> Module List Sort and Filter Controls table </xar:comment>
              <label class="xar-form-label" for="filter"><xar:mlstring>Style</xar:mlstring></label>
              <select name="selstyle" id="selstyle" onchange="this.form.submit()">
                    <xar:foreach in="$style" key="$key" value="$value">
                      <xar:if condition="$key eq $selstyle">
                        <option value="#$key#" selected="selected">#$value#</option>
                      <xar:else />
                        <option value="#$key#">#$value#</option>
                      </xar:if>
                    </xar:foreach>
                  </select>
        </div>
        <xar:if condition="$selstyle eq 'compact'">
            <xar:template file="compact" type="module"/>
        <xar:elseif condition="$selstyle eq 'plain'"/>
            <xar:template file="plain" type="module"/>
        <xar:else/>
            <xar:template file="icons" type="module"/>
        </xar:if>
    </form>
    #$pager#
</div>