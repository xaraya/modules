<xar:style scope="module" />
<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Courses Administration</xar:mlstring>
    </span>
</div>
<div class="xar-mod-body"><h2>#$menutitle#</h2><br />

    <xar:if condition="!empty($menu)">
    #$menu#
    </xar:if>
    <xar:if condition="xarSessionGetVar('statusmsg') ne ''">
        <p>#xarSessionGetVar('statusmsg')#</p>
    </xar:if>
    <xar:data-getitems name="$properties" value="$values" module="courses" itemtype="$itemtype" numitems="$itemsperpage" startnum="$startnum" />

    <table>
        <thead>
            <tr>
                <xar:foreach in="$properties" key="$name">
                    <th><xar:data-label property="$properties[$name]" /></th>
                </xar:foreach>
                <th><xar:mlstring>Options</xar:mlstring></th>
            </tr>
        </thead>
        <xar:set name="$class">'xar-norm'</xar:set>
        <xar:foreach in="$values" key="$itemid" value="$fields">
        <tr class="#$class#">
            <xar:foreach in="$properties" key="$name">
                <xar:if condition="!empty($fields[$name])">
                <td><xar:data-output property="$properties[$name]" value="$fields[$name]" /></td>
                <xar:else />
                <td>&nbsp;</td>
                </xar:if>
            </xar:foreach>
            <td>
                <a href="#xarModURL('courses','admin','display',array('itemid' => $itemid, 'itemtype' => $itemtype))#"><xar:mlstring>Display</xar:mlstring></a> |
                <a href="#xarModURL('courses','admin','modify', array('itemid' => $itemid, 'itemtype' => $itemtype))#"><xar:mlstring>Modify</xar:mlstring></a>


                <xar:if condition="$itemtype ne 1004">
                    |
                    <a href="#xarModURL('courses','admin','delete', array('itemid' => $itemid, 'itemtype' => $itemtype))#"><xar:mlstring>Delete</xar:mlstring></a>
                </xar:if>
            </td>
        </tr>
        <xar:if condition="$class eq 'xar-norm'">
            <xar:set name="$class">'xar-accent'</xar:set>
        <xar:else />
            <xar:set name="$class">'xar-norm'</xar:set>
        </xar:if>
        </xar:foreach>
        <tr>
            <xar:foreach in="$properties" key="$name">
                <td>&nbsp;</td>
            </xar:foreach>
            <td><a href="#xarModURL('courses','admin','new', array('itemtype' => $itemtype))#"><xar:mlstring>New</xar:mlstring></a></td>
        </tr>
    </table>
</div>
<xar:if condition="xarSessionSetVar('statusmsg', '')"></xar:if>
