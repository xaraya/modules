        <item>
            <title>#$faq['ttitle']#</title>
            <link>#$faq['viewtopicurl']#</link>
            <author>#$posterlist[$faq['towner']]['name']#</author>
            <pubDate>#xarLocale::formatUTCDate("%a, %d %b %Y %H:%M:%S GMT",$faq['ptime'])#</pubDate>
