<xar:if condition="!empty($items)">
  <ul>
    <xar:foreach in="$items" value="$item">
      <li>
        <xar:if condition="empty($item['link'])">
            #$item['title']#
        <xar:else />
            <a href="#$item['link']#">#$item['title']#</a>
        </xar:if>
        <xar:if condition="!empty($item['value'])">
            (#$item['value']#)
        </xar:if>
        <xar:if condition="!empty($item['summary'])">
        #$item['summary']#
        </xar:if>
      </li>      
    </xar:foreach>
  </ul>
</xar:if>  
