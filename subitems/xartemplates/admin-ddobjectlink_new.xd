<xar:template type="module" file="menu" />

<div class="xar-mod-body"><h2>#$heading#</h2><br />

<table width="100%" border="0" cellspacing="1" cellpadding="8">
<form action="" method="POST" enctype="multipart/form-data">
<!--
    // Add an authorisation ID - this adds a hidden field in the form that
    // contains an authorisation ID.  The authorisation ID is very important in
    // preventing certain attacks on the website
-->
    <input type="hidden" name="authid" id="authid" value="#xarSecGenAuthKey()#" />    
<tr>
<td>
    <xar:mlstring>Subitems Object:</xar:mlstring>
</td>
<td>
    <xar:data-input name="objectid" value="$objectid['value']" type="object" />
    <span style="color:red">#$objectid['error']->msg#</span>    
</td>
</tr>
<tr>
<td>
    <xar:mlstring>Hooked Module Name:</xar:mlstring>
</td>
<td>
    <input type="text" name="modid" value="#$module['value']#" />
    <span style="color:red">#$module['error']->msg#</span>
</td>
</tr>
<tr>
<td>
    <xar:mlstring>Hooked Item Type:</xar:mlstring>
</td>
<td>
    <input type="text" name="itemtype" value="#$itemtype['value']#" />
    <span style="color:red">#$itemtype['error']->msg#</span>
</td>
</tr>
<tr>
<td>
    <xar:mlstring>Template to use:</xar:mlstring>
</td>
<td>
    <input type="text" name="template" value="#$template['value']#" />
    <span style="color:red">#$template['error']->msg#</span>
</td>
</tr>
<tr><td colspan="2" align="center">
    <input type="submit" name="confirm" value="#$submitbutton#" />
</td></tr>
</form>
</table>
</div>
