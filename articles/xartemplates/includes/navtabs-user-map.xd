<xar:if condition="xarTplAddStyleLink('articles', 'navtabs')">
	<div class="tabnav">
		<div class="navhelp" class="help" title="#xarML('Click on a tab to explore further')#">
			<xar:mlstring>
				Options 
			</xar:mlstring>
			: 
		</div>
		<div class="tabnav-hairline"><!-- &nbsp; --></div>
		<ul class="navlist">
			<li>
				<a href="#xarModURL('articles','user','viewmap',array('by' => 'cat'))#">
					<xar:mlstring>
						Article Map by Category 
					</xar:mlstring>
				</a>
			</li>
			<li>
				<a href="#xarModURL('articles','user','viewmap',array('by' => 'pub','ptid' => $ptid))#">
					<xar:mlstring>
						Article Map by Publication Type 
					</xar:mlstring>
				</a>
			</li>
			<xar:if condition="!empty($viewlink)">
				<li>
					<a href="#$viewlink#">
						#$viewlabel# 
					</a>
				</li>
			</xar:if>
			<xar:if condition="!empty($archivelink)">
				<li>
					<a href="#$archivelink#">
						#$archivelabel# 
					</a>
				</li>
			</xar:if>
		</ul>
		<div class="tabnav-hairline"><!-- &nbsp; --></div>
	</div>
</xar:if>