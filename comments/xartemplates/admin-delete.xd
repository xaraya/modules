<div class="xar-mod-head">
    <span class="xar-mod-title">
        <xar:mlstring>Comments Administration</xar:mlstring>
    </span>
</div>

<div align="center">
    <h2>
        <xar:mlstring>Delete Comments</xar:mlstring>
    </h2>
</div>

<br />

<div class="xar-mod-body xar-norm-outline" style="padding: 1px;">

    <div align="center">
        <xar:mlstring>
            Are you sure you want to delete <b>all</b> comments associated with
        </xar:mlstring>

        <xar:if condition="$dtype ne 'all'">
            <b>#$modname#</b>
        <xar:else />
            <b>
            <xar:mlstring>all modules</xar:mlstring>
            </b>
        </xar:if>

        <xar:if condition="$dtype eq 'object'">
            <xar:mlstring>
                page id
            </xar:mlstring>

            [<b>#$objectid#</b>]?
        <xar:else />
            ?
        </xar:if>
        <form method="post" action="#$delete_url#">
            <input type="hidden" name="authid" value="#$authid#">
            <b><xar:mlstring>Yes</xar:mlstring></b>
                <input type="radio" name="choice" id="yes" value="yes" />
            <b><xar:mlstring>No</xar:mlstring></b>
                <input type="radio" name="choice" id="no" value="no" checked="checked" />
            <br />
            <input type="submit" name="submitted" id="submitted" value="submit" />
        </form>
    </div>
</div>
<br />
<br />
