<xar:template file="admin-menu" type="module"/>

<div align="center">
<xar:mlstring>Confirm deleting this item</xar:mlstring><br />

<form method="post" action="&xar-modurl-bkview-admin-delete;">
  <input type="hidden" name="authid" value="#$authid#" />
  <input type="hidden" name="confirm" value="true" />
  <input type="hidden" name="repoid" value="&xar-var-repoid;" />

  <table>
    <tr>
      <th><xar:mlstring>Repository-ID</xar:mlstring>:</td>
      <th><xar:mlstring>Repository name</xar:mlstring>:</td>
    </tr>
    <tr>
        <td>#$repoidvalue#</td>
      <td>#$reponamevalue#</td>
    </tr>
    <tr>
        <td colspan="2" align="center"><br />
          <input type="submit" value="#$confirmbutton#"  />
      </td>
    </tr>
  </table>
</form>
</div>

