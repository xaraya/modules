<xar:base-include-javascript module="base" filename="confirmlink.js" position="head" />
<div class="xar-mod-head">
	<span class="xar-mod-title">
		<xar:mlstring>
			Referer Module
		</xar:mlstring>
	</span>
</div>
<!-- common admin menu for this module - remove link to the current function -->
<div class="xar-mod-body">
	<h2>
		<xar:mlstring>
			Recent Referers
		</xar:mlstring>
	</h2>
	<xar:template file="navtabs" type="module" />

	<div class="xar-norm-outline" style="margin: 0px 3px 6px 3px;padding: 3px;text-align: left;">
		<div class="xar-norm" style="padding: 3px;">
			<span style="float: left; text-align: left; width: 89%;"><xar:mlstring>Url</xar:mlstring></span>
			<span style="float: right; text-align: right; width: 9%;"><xar:mlstring>Frequency</xar:mlstring></span><br />
		</div>
	<xar:loop name="$items">
		<xar:if condition="(($loop:index + 1) % 2)">
		<div class="xar-norm" style="padding: 3px;">
			<span style="float: left; text-align: left; width: 89%;"><a href="#$loop:item['url']#">#$loop:item['urldisplay']#</a></span>
			<span style="float: right; text-align: right; width: 9%;">#$loop:item['frequency']#</span><br />
		</div>
		<xar:else />
		<div class="xar-accent" style="padding: 3px;">
			<span style="float: left; text-align: left; width: 89%;"><a href="#$loop:item['url']#">#$loop:item['urldisplay']#</a></span>
			<span style="float: right; text-align: right; width: 9%;">#$loop:item['frequency']#</span><br />
		</div>
		</xar:if>
	</xar:loop>
	</div>
	<!-- add the pager here -->
	<div style="text-align: center;">#$pager#</div>
</div>