<!-- include the module header on all admin pages -->
<div class="xar-mod-head">
  <span class="xar-mod-title">
    <xar:mlstring>Translations Administration</xar:mlstring>
  </span>
</div>
<xar:set name="$menu_dntype">#xarSessionGetVar('translations_dnType')#</xar:set>

<xar:if condition="isset($menu_dntype)">
<xar:if condition="$menu_dntype == 1"><xar:set name="$menu_dntypetext">'core'</xar:set></xar:if>
<xar:if condition="$menu_dntype == 2"><xar:set name="$menu_dntypetext">'theme'</xar:set></xar:if>
<xar:if condition="$menu_dntype == 3"><xar:set name="$menu_dntypetext">'module'</xar:set></xar:if>
<xar:else />
<xar:set name="$menu_dntypetext">''</xar:set>
</xar:if>

<div class="xar-mod-body">
  <h3><xar:mlstring>Summary of Current Settings</xar:mlstring></h3>

<table>
	<tr>
		<td width="45%" valign="top">
			<span><b><xar:mlstring>Translation Settings</xar:mlstring></b></span>
		</td>
		<td>
		</td>
		<td>
			<span><b><xar:mlstring>Site MLS Settings</xar:mlstring></b></span>
		</td>
	</tr>
	<tr>
		<td width="45%" valign="top">
			<span><xar:mlstring>Translating</xar:mlstring></span>
			<span class="xar-title">
        <!-- TODO: we are using the session var here, but it is really the directory, to cater for name/dir independence -->
				#$menu_dntypetext#&nbsp;#xarSessionGetVar('translations_dnName')#
			</span>
			<span><xar:mlstring>to:</xar:mlstring></span>
			<span class="xar-title">
				<a href="#xarModURL('translations','admin','start')#">
					#xarSessionGetVar('translations_working_locale')#
				</a>
			</span>
			<br/>
			<span><xar:mlstring>Translation Backend</xar:mlstring>:</span>
			<span class="xar-title">
				<a href="#xarModURL('translations','admin','modifyconfig')#">
					#xarConfigGetVar('Site.MLS.TranslationsBackend')#
				</a>
			</span>
			<br/>
			<span><xar:mlstring>Release Backend</xar:mlstring>:</span>
			<span class="xar-title">
				<a href="#xarModURL('translations','admin','modifyconfig')#">
					#xarModGetVar('translations', 'release_backend_type')#
				</a>
			</span>
		</td>
		<td width="10%">
			&nbsp;
		</td>
		<td width="45%" valign="top">
			<span><xar:mlstring>Site Display Locale</xar:mlstring>:</span>
			<span class="xar-title">
				<a href="#xarModURL('base','admin','modifyconfig')#">
					#xarConfigGetVar('Site.MLS.DefaultLocale')#
				</a>
			</span>
			<xar:mlstring>(recommended: utf)</xar:mlstring>
			<br/>
			<span><xar:mlstring>MLS Mode</xar:mlstring>:</span>
			<span class="xar-title">
				<a href="#xarModURL('translations','admin','modifyconfig')#">
					#xarConfigGetVar('Site.MLS.MLSMode')#
				</a>
			</span>
			<br/>
		</td>
	</tr>
</table>
</div>
